---
import { ArrowLeft } from "lucide-react";

const { slug } = Astro.params;

// Simulación de propiedades (podés importarlas desde un archivo real o hacer fetch desde una API)
import { properties } from "@/data/properties"; // ⚠️ Crea este archivo

const property = properties.find(
  (p) => p.title.toLowerCase().replaceAll(" ", "-") === slug
);

if (!property) {
  throw new Error("Propiedad no encontrada");
}
---

<html lang="es">
  <head>
    <title>{property.title} | TerraRealEstateCR</title>
  </head>
  <body class="bg-white text-gray-800">
    <main class="max-w-4xl mx-auto py-12 px-6">
      <a
        href="/propiedades"
        class="inline-flex items-center text-green-600 hover:underline mb-4"
      >
        <ArrowLeft className="w-4 h-4 mr-1" />
        Volver a propiedades
      </a>

      <h1 class="text-3xl font-bold mb-2">{property.title}</h1>
      <p class="text-sm text-gray-500 mb-4">{property.location}</p>
      <img src={property.image} alt={property.title} class="rounded-lg mb-6" />

      <p class="text-gray-700 mb-6">{property.description}</p>

      <ul class="list-disc list-inside mb-6">
        {property.features.map((f) => <li>{f}</li>)}
      </ul>

      <p class="text-green-700 font-semibold">Precio: {property.price}</p>
    </main>
  </body>
</html>
